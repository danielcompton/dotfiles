#!/usr/bin/env bash
#
# Loop on CI status until it succeeds.

# Emulate a do-while loop
# https://stackoverflow.com/a/16491478/826486
while
    STATUS=$(hub ci-status ${SHA})
    RET=$?
    echo $STATUS
    [[ ${RET} -eq 2 ]]
do
    sleep 5
done

if [ ${RET} -eq 0 ]; then
    say $STATUS
else
    say "Oh no." $STATUS
fi
